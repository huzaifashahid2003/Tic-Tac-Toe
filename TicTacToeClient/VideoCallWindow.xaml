<Window x:Class="TicTacToeClient.VideoCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Call" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <StackPanel Margin="10">
        <!-- My Video -->
        <Label Content="My Camera:" FontWeight="Bold"/>
        <Border BorderBrush="Black" BorderThickness="1" Background="Black" Height="200" Margin="0,0,0,10">
            <Image x:Name="imgLocalVideo" Stretch="Uniform"/>
        </Border>
        <TextBlock x:Name="txtLocalStatus" Text="Starting camera..." Margin="0,0,0,10"/>

        <!-- Opponent Video -->
        <Label Content="Opponent Camera:" FontWeight="Bold"/>
        <Border BorderBrush="Black" BorderThickness="1" Background="Black" Height="200" Margin="0,0,0,10">
            <Image x:Name="imgRemoteVideo" Stretch="Uniform"/>
        </Border>
        <TextBlock x:Name="txtRemoteStatus" Text="Waiting for connection..." Margin="0,0,0,10"/>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock x:Name="txtCallStatus" Text="Connecting..." Margin="0,0,20,0" VerticalAlignment="Center"/>
            <Button x:Name="btnEndCall" Content="End Call" Width="100" Height="30" 
                    Background="Red" Foreground="White" Click="BtnEndCall_Click" Margin="0,0,20,0"/>
            <TextBlock x:Name="txtCallDuration" Text="00:00" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>
